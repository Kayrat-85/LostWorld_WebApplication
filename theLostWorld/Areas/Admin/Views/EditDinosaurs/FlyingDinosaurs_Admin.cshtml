@model IQueryable<DinosaursFlying>
@{
    string strTitle = "Панель Редактирования";
    ViewBag.Title = strTitle;
}


<div class="container">
    <wbr>
    <div class="row">
        <div class="col-md-3">
            <!--Эта колонка для смещения, надписи: Панель администратора-->
        </div>
        <div class="col-md-7">
            <span class="badge bg-secondary text-white"><h2>Панель администратора</h2></span>
        </div>
    </div>
    <wbr>
    <div class="row">
        <nav aria-label="breadcrumb">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Aдмин панель</a></li>
                <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="EditPanel" asp-action="Dinosaurs_admin">Вкладка: Динозавры</a></li>
                <li class="breadcrumb-item active" aria-current="page">Динозавры: летающие</li>
            </ol>
        </nav>
    </div>
</div>
<wbr>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <!--Эта колонка для смещения карты по центру-->
        </div>
        <div class="col-md-7">
            <div class="card text-center bg-light border-dark">
                <div class="card-header bg-danger text-white border-dark">
                    Летающие динозавры
                </div>
                <div class="card-body bg-body">
                    <p class="card-text">Добавьте новую статью</p>
                    <a <a asp-area="Admin" asp-controller="DinosaursFlyings" asp-action="Edit" asp-route-id="" class="btn btn-outline-warning">Добавить статью</a>
                    <div class="div-box">
                        @if (Model.Any())
                        {
                            <div>
                                @foreach (DinosaursFlying entity in Model)
                                {
                                    <div>
                                        <a asp-area="Admin" asp-controller="DinosaursFlyings" asp-action="Edit" asp-route-id="@entity.Id">редактировать</a>
                                        |
                                        <form style="display: inline-block;" id="form-@entity.Id"
                                              asp-area="Admin" asp-controller="DinosaursFlyings" asp-action="Delete" method="post">
                                            <input type="hidden" name="id" value="@entity.Id">
                                            <a href="#" onclick="document.getElementById('form-@entity.Id').submit();">удалить</a>
                                        </form>
                                        |
                                        <a asp-area="" asp-controller="Dinosaurs" asp-action="FlyingDinosaurs" asp-route-id="@entity.Id">
                                            @($"{entity.Title}")
                                        </a>
                                    </div>
                                }
                            </div>
                        }
                    </div>
                </div>
                <div class="card-footer text-secondary border-dark">
                    <div class="div-box">
                        <h5>Редактировать</h5>
                        <a asp-area="Admin" asp-controller="TextFields" asp-action="Edit" asp-route-codeWord="PageDinosaursFlyings">Летающие динозавры</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>


